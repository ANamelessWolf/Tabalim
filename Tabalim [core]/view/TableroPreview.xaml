    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Name="circuitos" ItemsSource="{Binding DataCollection}" Grid.Row="2" AutoGenerateColumns="True" CanUserSortColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Path=IsValid, Mode=OneWay}" IsReadOnly="True">
                    <DataGridCheckBoxColumn.Header>Completo</DataGridCheckBoxColumn.Header>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding Path=Nombre}">
                    <DataGridTextColumn.Header>Nombre</DataGridTextColumn.Header>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MetroDataGridColumnHeader}">
                    <EventSetter Event="Click" Handler="DataGridColumnHeader_Click"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
